# ============================================
# CONFIGURACIÓN DE OPENAI (OBLIGATORIO)
# ============================================
# Obtén tu API key en: https://platform.openai.com/api-keys
# IMPORTANTE: Reemplaza 'tu_api_key_aqui' con tu clave real
OPENAI_API_KEY=sk-tu-api-key-aqui-reemplazar
OPENAI_MODEL=gpt-3.5-turbo-0125
EMBEDDING_MODEL=text-embedding-ada-002

# Configuración RAG
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
PERSIST_DIRECTORY=./chroma_db
DOCUMENT_PATH=sample_document.txt
DOCUMENTS_DIRECTORY=./documents
KB_DIRECTORY=./kb

# Configuración del Microservicio
SERVICE_NAME=rag-chat-service
SERVICE_PORT=8000
SERVICE_HOST=0.0.0.0
RELOAD=false

# ============================================
# GUARDRAILS ÉTICOS MÉDICOS (Configurable)
# ============================================
# Habilitar/deshabilitar guardrails médicos
ENABLE_MEDICAL_GUARDRAILS=true
# Umbral de riesgo alto (0.0 a 1.0) - derivar a médico
HIGH_RISK_THRESHOLD=0.6
# Umbral de riesgo crítico (0.0 a 1.0) - urgencia
CRITICAL_RISK_THRESHOLD=0.8

# ============================================
# MONGODB - BASE DE DATOS (OBLIGATORIO)
# ============================================
# URL de conexión a MongoDB
# Formato: mongodb://usuario:password@host:puerto
# Ejemplo local: mongodb://localhost:27017
# Ejemplo con autenticación: mongodb://usuario:password@localhost:27017
# Ejemplo MongoDB Atlas: mongodb+srv://usuario:password@cluster.mongodb.net/
MONGODB_URL=mongodb://localhost:27017

# Nombre de la base de datos
MONGODB_DATABASE_NAME=hackathon_salud

# Nombre de la colección para conversaciones
MONGODB_COLLECTION_CONVERSATIONS=conversations

